<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <% if(is_home()) { %>
            <%= config.title %>
        <% } else { %>
            <%= config.title %> - <%= page.title %>
        <% } %>
    </title>
    <%- css('https://code.cdn.mozilla.net/fonts/fira.css') %>
    <%- css('css/app.min.css') %>
    <%- favicon_tag('img/favicon.png') %>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <% 
        if(is_home()) { 
            var share_image = config.url + '/img/' + theme.default_share_image;
            var title = config.title;
        }

        else if(is_post()) {
            var share_image = config.url + '/img/' + page.cover;
            var title = config.title + ' - ' + page.title;
        }
    %>
    <meta name="description" content="<%= config.description %>">

    <!-- Facebook Opengraph -->
    <meta property="og:title" content="<%= title %>"/>
    <meta property="og:description" content="<%= config.description %>"/>
    <meta property="og:type" content="article"/>
    <meta property="og:url" content="<%= url %>"/>
    <meta property="og:site_name" content="<%= config.title %>"/>
    <meta property="og:image" content="<%= url_for(share_image) %>"/>

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@victorhornets">
    <meta name="twitter:creator" content="@victorhornets">
    <meta name="twitter:title" content="<%= title %>">
    <meta name="twitter:description" content="<%= config.description %>">
    <meta name="twitter:image" content="<%= url_for(share_image) %>">
</head>
